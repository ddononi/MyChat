<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ListView android:id="@+id/message_timeline"
		android:layout_width="fill_parent" android:layout_height="0dp"
		android:layout_weight="1" android:stackFromBottom="true" />
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<EditText android:id="@+id/message_box" android:layout_width="0dp"
			android:layout_height="fill_parent" android:layout_weight="1" />
		<Button android:id="@+id/send_button" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="전송" />
	</LinearLayout>
</LinearLayout>